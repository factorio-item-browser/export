parameters:
  level: max
  paths:
    - src
    - test/serializer
    - test/src

  ignoreErrors:
    - '#Dynamic call to static method PHPUnit\\Framework\\.*#'
    - '#Call to an undefined method PHPUnit\\Framework\\MockObject\\MockBuilder<FactorioItemBrowser\\Export\\Command\\SubCommandTrait>::expects\(\)\.#'

includes:
  - vendor/phpstan/phpstan-phpunit/extension.neon
  - vendor/phpstan/phpstan-phpunit/rules.neon
  - vendor/phpstan/phpstan-strict-rules/rules.neon
